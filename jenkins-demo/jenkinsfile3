pipeline {
    agent any

    parameters {
        booleanParam(name: 'RELEASE', defaultValue: 'false', description: 'Is this a release version?')
    }

    environment {
        RELEASE_VERSION = 'R.02'
        VERSION = '0.02'
    }

    stages {
        stage('Audit Tool') {
            steps {
                auditTools()
            }
        }

        stage('Unit Test') {
            steps {
                echo "The version is ${VERSION}"
                sh '''
                echo "Executing unit test"
                mvn clean install
                mvn test
                '''
            }
        }

        stage('Build') {
            steps {
               
                echo "Executing build stage ${RELEASE_VERSION}"
                sh '''
                mvn clean
                '''
            }
        }

        stage('Publish') {
            steps {
                archiveArtifacts('**/*.war')
            }
        }
    }


    void auditTools() {
        sh '''
                git --version
                    java --version
                    mvn --version
        '''
    }
}
